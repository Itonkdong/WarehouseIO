
@{
    ViewBag.Title = "Add Warehouse";
}

<form class="type1-add-edit-view-page">
    <header>
        <h1>Add Warehouse</h1>
    </header>
    <div class="add-warehouse-wrapper">
        <div class="add-warehouse-container">
            <div class="add-warehouse-item">
                <label for="warehouse-name" >Name</label>
                <input type="text" id="warehouse-name">
            </div>
            <div class="add-warehouse-item">
                <label for="warehouse-description" >Description</label>
                <input type="text" id="warehouse-description">
            </div>
            <div class="add-warehouse-item">
                <label for="warehouse-location" >Location</label>
                <input type="text" id="warehouse-location">
            </div>
            <div class="add-warehouse-item">
                <label for="warehouse-max-capacity" >Max Capacity</label>
                <input type="text" id="warehouse-max-capacity">
            </div>

        </div>
    </div>
    <footer>
        <p class="page-error-message">Error Message: Fill all the inputs</p>
    </footer>
    <div class="page-main-buttons">
        <button class="btn-default page-main-button">Add</button>
        <button class="btn-default page-main-button">To Dashboard</button>
    </div>
</form>

